{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "useUniqueElementIds": "off",
        "noInvalidDirectionInLinearGradient": "off"
      },
      "style": {
        "useConst": "error",
        "useSelfClosingElements": "error"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noDebugger": "error",
        "noExplicitAny": "warn",
        "noUnknownAtRules": "off",
        "noDuplicateProperties": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}
